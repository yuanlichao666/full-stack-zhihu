{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@zh-plugin/tsconfig/project-app-vue/tsconfig.json"
  ],
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "*env.d.ts",
    "*env.*.d.ts",
    "typed-router.d.ts",
    "auto-imports.d.ts",
    "typed-auto-route.d.ts",
    "typed-env.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "noEmit": false,
    "outDir": "./node_modules/.tmp/", // 指定输出目录
    "rootDir": "./", // 指定源代码的根目录
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowImportingTsExtensions": true
  }
}
