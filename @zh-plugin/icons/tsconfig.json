{
  "extends": ["@zh-plugin/tsconfig/conf/platform-node"],
  "include": [
    "src/conf/**/*",
    "src/core/**/*",
    "src/vite/**/*",
    "src/utils/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@/core/*": ["./src/core/*"],
      "@/conf/*": ["./src/conf/*"],
      "@/vite/*": ["./src/vitte/*"],
      "@/utils/*": ["./src/utils/*"]
    },
    "allowJs": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "moduleDetection": "auto",
    "outDir": "./dist/"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
